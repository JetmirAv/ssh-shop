#!/usr/bin/env node

/**
 * Module dependencies.
 */

const app = require("../app");
const debug = require("debug")("server:server");
const http = require("http");
const normalizePort = require("../util/normalizePort");
const onError = require("../util/onError");

/**
 * Get port from environment and store in Express.
 */

const host = process.env.NODE_HOST || "localhost";
const port = normalizePort(process.env.NODE_PORT || 3000);
app.set("port", port);

/**
 * Event listener for HTTP server "listening" event.
 */

const onListening = () => {
  debug("Server started on: http://" + host + ":" + port);
  console.info("Server started on: http://" + host + ":" + port);
};

/**
 * Create HTTP server.
 */

const server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on("error", onError);
server.on("listening", onListening);
