<AnchorPane styleClass="windowSize" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fiek.controllers.profile.AddressController">
   <children>
      <HBox prefHeight="401.0" prefWidth="928.0" spacing="15.0" styleClass="hboxContainer">
         <children>
            <ScrollPane prefHeight="351.0" prefWidth="240.0" styleClass="address-scrollpane">
               <content>
                  <VBox fx:id="vboxList" prefHeight="368.0" prefWidth="253.0" styleClass="firstVbox" />
               </content>
            </ScrollPane>
            <AnchorPane fx:id="root" prefHeight="310.0" prefWidth="615.0" styleClass="secondAncharPane">
               <children>
                  <GridPane layoutX="15.0" layoutY="15.0" prefHeight="304.0" prefWidth="262.0" styleClass="gridPane">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <JFXTextField fx:id="streetId" promptText="Street" styleClass="streetField">
                           <GridPane.margin>
                              <Insets top="15.0" />
                           </GridPane.margin></JFXTextField>
                        <JFXTextField fx:id="postalId" promptText="Postal" styleClass="postalField" GridPane.rowIndex="1" />
                        <JFXComboBox fx:id="countryComboId" promptText="Country" styleClass="countryCombobox" GridPane.rowIndex="2" />
                        <JFXComboBox fx:id="cityComboId" promptText="City" styleClass="cityCombobox" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
                  <JFXButton fx:id="saveBttnId" layoutX="-4.0" layoutY="-24.0" onAction="#EditHandler" styleClass="saveBttnAddressCards" text="Save" />
                  <JFXButton fx:id="deleteBttnId" styleClass="deleteBttnAddressCards" text="Delete" />
                  <JFXButton fx:id="createBtn"   layoutX="-179.0" layoutY="-24.0" onAction="#CreateHandler" styleClass="saveBttnAddressCards" text="Create" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </AnchorPane>
         </children></HBox>
   </children>
