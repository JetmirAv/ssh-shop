<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane styleClass="windowSize" stylesheets="/org/fiek/styles/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fiek.controllers.profile.InfoController">
    <children>
        <HBox layoutX="30.0" layoutY="52.0" prefHeight="49.0" prefWidth="556.0">
            <children>
                <JFXButton fx:id="infoFieldId" styleClass="infoField" text="Info" />
                <JFXButton fx:id="passwordFieldId"  styleClass="passwordField" text="Password" />
                <JFXButton fx:id="addressesFieldId"  styleClass="addressesField" text="Addresses" />
                <JFXButton fx:id="cardsFieldId"  styleClass="cardsField" text="Cards" />
            </children>
        </HBox>
      <Pane layoutX="38.0" layoutY="136.0" prefHeight="408.0" prefWidth="380.0">
         <children>
            <ImageView fitHeight="339.0" fitWidth="342.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/ImagePlaceHolder.png" />
               </image></ImageView>
            <JFXButton fx:id="changeAvatarId" styleClass="changeAvatarBttn" text="Change avatar" />
         </children>
      </Pane>
      <GridPane layoutX="440.0" layoutY="151.0" prefHeight="332.0" prefWidth="254.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <JFXTextField fx:id="firstNameId"  promptText="First name" styleClass="profile-information-field" />
            <JFXTextField fx:id="lastNameId"  promptText="Last name" styleClass="profile-information-field" GridPane.rowIndex="1" />
            <JFXTextField fx:id="emailId"  promptText="Email" styleClass="profile-information-field" GridPane.rowIndex="2" />
            <JFXTextField fx:id="birthdateId"  promptText="Birthdate" styleClass="profile-information-field" GridPane.rowIndex="3" />
            <JFXComboBox fx:id="genderComboId"  promptText="Gender" styleClass="profile-information-field" GridPane.rowIndex="4" />
         </children>
      </GridPane>
      <JFXButton fx:id="saveBttnId"  styleClass="saveBttnInfo" text="Save" />
      <JFXButton fx:id="deleteBttnId"  styleClass="deleteBttnInfo" text="Delete" />
    </children>
</AnchorPane>
